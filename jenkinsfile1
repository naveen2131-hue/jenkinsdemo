pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
            volumeMounts:
             - mountPath: /var/run/docker.sock
               name: docker-sock
          volumes:
          - name: docker-sock
            hostPath:
              path: /var/run/docker.sock
       '''
    }
  }
  stages {
    stage('owasp baseline zap') {
      steps {
        container('docker') {
          sh 'docker run -v $(pwd):/zap/wrk/:rw -t ubuntu:20.04
                -t https://stardust-studios-recording-studio.business.site/ touch /zap/wrk/test.txt'
 
        }
      }
    } 
}
}
