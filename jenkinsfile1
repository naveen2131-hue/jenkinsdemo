pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
            volumeMounts:
             - mountPath: /var/run/docker.sock
               name: docker-sock
             - mountPath: /zap/wrk
               name: zapreport
          volumes:
          - name: docker-sock
            hostPath:
              path: /var/run/docker.sock
          - name: zapreport
            persistentVolumeClaim: 
              claimName: zap-pv-claim
       '''
    }
  }
  stages {
    stage('owasp baseline zap') {
      steps {
        container('docker') { 
          sh 'docker run -v $(pwd):/zap/wrk/:rw -t owasp/zap2docker-stable zap-baseline.py -t https://stardust-studios-recording-studio.business.site/ -r testreport.html'
        }
      }
    } 
}
}
