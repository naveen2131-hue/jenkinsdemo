pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
            volumeMounts:
             - mountPath: /var/run/docker.sock
               name: docker-sock
          volumes:
          - name: docker-sock
            hostPath:
              path: /var/run/docker.sock
       '''
    }
  }
  stages {
    stage('owasp baseline zap') {
      steps {
        container('docker') {
          sh 'docker run -v $(pwd):/zap/wrk/:rw -t owasp/zap2docker-stable bash -c "touch /zap/wrk/demo.txt'  
          sh 'docker run -v $(pwd):/zap/wrk/:rw -t  owasp/zap2docker-stable bash -t https://stardust-studios-recording-studio.business.site/ -r /zap/wrk/demo.txt'
        }
      }
    } 
}
}
