pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
            volumeMounts:
             - mountPath: /var/run/docker.sock
               name: docker-sock
          volumes:
          - name: docker-sock
            hostPath:
              path: /var/run/docker.sock    
       '''
    }
  }
  stages {
    stage('owasp baseline zap') {
      steps {
        container('docker') {
          docker run -v $(pwd):$(pwd):rw -t owasp/zap2docker-stable zap-baseline.py \
    -t https://stardust-studios-recording-studio.business.site/ -g gen.conf -r testreport.html

        }
      }
    } 
}
}
